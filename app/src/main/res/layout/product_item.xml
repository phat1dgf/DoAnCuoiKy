<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/product_item">

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Tittle131231323123331321323"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="price131231323123331321323"
            android:textSize="20dp"
            android:textStyle="bold"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_product_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="State131231323123331321323"
            android:textSize="15dp"

            android:padding="5dp"/>

        <TextView
            android:id="@+id/tv_product_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="location131231323123331321323"
            android:textSize="15dp"
            android:drawableStart="@drawable/location_icon"
            android:padding="5dp"/>

    </LinearLayout>
</LinearLayout>